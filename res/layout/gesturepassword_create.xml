<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mqq="http://schemas.android.com/apk/res/com.tencent.mobileqq"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gesture_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120.0dip"
        android:orientation="vertical" >

        <com.android.lockpattern.widget.LockPatternSmallView
            android:id="@+id/gesturepwd_pattern_preview"
            android:layout_width="54.0dip"
            android:layout_height="0.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="33.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/gesture_create_grid_bg" />
    </LinearLayout>

    <TextView
        android:id="@+id/gesturepwd_create_text"
        android:layout_width="wrap_content"
        android:layout_height="24.0dip"
        android:layout_gravity="center_horizontal"
        android:shadowColor="#b3000000"
        android:shadowRadius="1.0"
        android:text="@string/gesturepwd_create_text"
        android:textColor="@android:color/white"
        android:textSize="16.0sp" />

    <com.android.lockpattern.widget.LockPatternView
        android:id="@+id/gesturepwd_create_lockview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="33.0dip" />

</LinearLayout>